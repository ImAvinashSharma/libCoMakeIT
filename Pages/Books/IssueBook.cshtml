@page
@model Lib.Pages.Books.IssueBookModel
@{
ViewData["Title"] = "Issue Book";
}

<h1>Issue Book</h1>

@if(Model.errorMessage.Length > 0){
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong>Warning!</strong> @Model.errorMessage
  <button type="button" class="btn-close" data-ds-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
}

@if(Model.successMessage.Length > 0){
<div class="row mb-3">
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong>Success!</strong> @Model.successMessage
    <button type="button" class="btn-close" data-ds-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
}

<form method="POST">
  <div class="row mb-3">
    <label class="col-sm-3 col-form-label">Book ID</label>
    <div class="col-sm-6">
      <input type="number" class="form-control" name="id" value="@Model.booksInfo.id" />
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-sm-3 col-form-label">Assigned To</label>
    <div class="col-sm-6">
      <input type="text" class="form-control" name="assignedTo" value="@Model.booksInfo.assignedTo" />
    </div>
  </div>
  <div class="row mb-3">
    <div class="offset-sm-3 col-sm-3 d-grid">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>

    <div class="col-sm-3 d-grid">
      <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
    </div>
  </div>
</form>