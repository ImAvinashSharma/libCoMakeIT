@page
@model Lib.Pages.Books.AddBookModel
@{
ViewData["Title"] = "Add Books";
}

<br />
<h2>New Client</h2>

@if(Model.errorMessage.Length > 0){
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong>Warning!</strong> @Model.errorMessage
  <button type="button" class="btn-close" data-ds-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
}

<form method="POST">
  <div class="row mb-3">
    <label class="col-sm-3 col-form-label">Title</label>
    <div class="col-sm-6">
      <input type="text" class="form-control" name="title" value="@Model.booksInfo.title" />
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-3 col-form-label">Author</label>
    <div class="col-sm-6">
      <input type="text" class="form-control" name="author" value="@Model.booksInfo.author" />
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-3 col-form-label">Publisher</label>
    <div class="col-sm-6">
      <input type="text" class="form-control" name="publisher" value="@Model.booksInfo.publisher" />
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-3 col-form-label">Categories</label>
    <div class="col-sm-6">
      <input type="text" class="form-control" name="categories" value="@Model.booksInfo.categories" />
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-3 col-form-label">Price</label>
    <div class="col-sm-6">
      <input type="number" class="form-control" name="prices" value="@Model.booksInfo.prices" />
    </div>
  </div>

  @if(Model.successMessage.Length > 0){
  <div class="row mb-3">
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <strong>Success!</strong> @Model.successMessage
      <button type="button" class="btn-close" data-ds-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
  }

  <div class="row mb-3">
    <div class="offset-sm-3 col-sm-3 d-grid">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>

    <div class="col-sm-3 d-grid">
      <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
    </div>
  </div>

</form>